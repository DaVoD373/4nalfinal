<?xml version="1.0" encoding="utf-8"?>
<android.support.v7.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/card_view_product_shopping_cart"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginLeft="@dimen/standard_margin"
    android:layout_marginRight="@dimen/standard_margin"
    android:layout_marginTop="@dimen/standard_margin"
    android:layoutDirection="rtl">

    <android.support.constraint.ConstraintLayout
        android:layout_width="match_parent"
        android:paddingBottom="@dimen/standard_margin"
        android:layout_height="wrap_content">


        <ImageView
            android:id="@+id/image_view_product_shopping_cart"
            android:layout_width="100dp"
            android:layout_height="100dp"
            android:layout_marginRight="@dimen/standard_margin_x2"
            android:layout_marginTop="@dimen/standard_margin"
            android:scaleType="centerCrop"
            tools:src="@drawable/horse6"
            app:layout_constraintRight_toRightOf="parent"
            app:layout_constraintTop_toTopOf="parent" />

        <ImageView
            android:id="@+id/image_view_clear_shopping_cart"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:padding="@dimen/standard_margin"
            app:layout_constraintLeft_toLeftOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            app:srcCompat="@drawable/ic_clear" />

        <TextView
            android:id="@+id/text_view_brand_product_shopping_cart"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginRight="@dimen/standard_margin"
            android:textSize="@dimen/default_text_size"
            android:text="brand"
            app:layout_constraintRight_toLeftOf="@id/image_view_product_shopping_cart"
            app:layout_constraintTop_toTopOf="@id/image_view_product_shopping_cart" />

        <TextView
            android:id="@+id/text_view_name_product_shopping_cart"
            android:layout_width="150dp"
            android:layout_height="wrap_content"
            android:layout_marginRight="@dimen/standard_margin"
            android:layout_marginTop="@dimen/standard_margin"
            android:text="کلاه افتابی- برند شوکوموله"
            android:textColor="@android:color/black"
            android:textSize="@dimen/standard_text_size"
            app:layout_constraintRight_toLeftOf="@id/image_view_product_shopping_cart"
            app:layout_constraintTop_toBottomOf="@id/text_view_brand_product_shopping_cart" />

        <TextView
            android:id="@+id/text_view_color_shopping_cart"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginRight="@dimen/standard_margin"
            android:layout_marginTop="@dimen/standard_margin"
            android:text="@string/color2"
            android:textColor="@android:color/black"
            android:textSize="@dimen/standard_text_size"
            app:layout_constraintRight_toRightOf="@id/image_view_product_shopping_cart"
            app:layout_constraintTop_toBottomOf="@id/image_view_product_shopping_cart" />

        <TextView
            android:id="@+id/text_view_second_column_color_shopping_cart"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginRight="@dimen/standard_margin"
            android:text="مشکی"
            android:textSize="@dimen/standard_text_size"
            app:layout_constraintBottom_toBottomOf="@id/text_view_color_shopping_cart"
            app:layout_constraintRight_toLeftOf="@id/text_view_color_shopping_cart"
            app:layout_constraintTop_toTopOf="@id/text_view_color_shopping_cart" />

        <TextView
            android:id="@+id/text_view_size_shopping_cart"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/standard_margin"
            android:text="@string/size2"
            android:textColor="@android:color/black"
            android:textSize="@dimen/standard_text_size"
            app:layout_constraintRight_toRightOf="@id/text_view_color_shopping_cart"
            app:layout_constraintTop_toBottomOf="@id/text_view_color_shopping_cart" />

        <TextView
            android:id="@+id/text_view_second_column_size_shopping_cart"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginRight="@dimen/standard_margin"
            android:text="41"
            android:textSize="@dimen/standard_text_size"
            app:layout_constraintBottom_toBottomOf="@id/text_view_size_shopping_cart"
            app:layout_constraintRight_toLeftOf="@id/text_view_size_shopping_cart"
            app:layout_constraintTop_toTopOf="@id/text_view_size_shopping_cart" />

        <TextView
            android:id="@+id/text_view_number_shopping_cart"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginRight="@dimen/standard_margin_x4"
            android:text="@string/number_2"
            android:textColor="@android:color/black"
            android:textSize="@dimen/standard_text_size"
            app:layout_constraintBottom_toBottomOf="@id/text_view_size_shopping_cart"
            app:layout_constraintRight_toRightOf="@id/text_view_name_product_shopping_cart"
            app:layout_constraintTop_toTopOf="@id/text_view_color_shopping_cart" />


        <com.travijuu.numberpicker.library.NumberPicker
        android:id="@+id/num_pick_number_shopping_cart"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:layout_constraintRight_toLeftOf="@+id/text_view_number_shopping_cart"
        app:layout_constraintTop_toTopOf="@+id/text_view_number_shopping_cart"
        app:layout_constraintBottom_toBottomOf="@id/text_view_number_shopping_cart"
        app:max="50"
        app:min="0"
        android:layout_marginRight="@dimen/standard_margin"
        app:unit="1"/>

        <TextView
            android:id="@+id/text_view_price_one_shopping_cart"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/standard_margin_x2"
            android:text="@string/price_one_2"
            android:textColor="@android:color/black"
            android:textSize="@dimen/standard_text_size"
            app:layout_constraintRight_toRightOf="@id/text_view_size_shopping_cart"
            app:layout_constraintTop_toBottomOf="@id/text_view_size_shopping_cart" />

        <TextView
            android:id="@+id/text_view_second_column_price_one_shopping_cart"
            app:layout_constraintLeft_toRightOf="@id/text_view_toman_price_one_shopping_cart"
            app:layout_constraintTop_toTopOf="@id/text_view_toman_price_one_shopping_cart"
            app:layout_constraintBottom_toBottomOf="@id/text_view_toman_price_one_shopping_cart"
            android:layout_marginLeft="@dimen/standard_margin"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="75,000"
            android:textSize="@dimen/standard_text_size" />

        <TextView
            android:id="@+id/text_view_toman_price_one_shopping_cart"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="@dimen/standard_margin"
            android:text="@string/price_unit"
            android:textSize="@dimen/standard_text_size"
            app:layout_constraintBottom_toBottomOf="@id/text_view_price_one_shopping_cart"
            app:layout_constraintLeft_toLeftOf="parent"
            app:layout_constraintTop_toTopOf="@id/text_view_price_one_shopping_cart" />

        <View
            android:id="@+id/line_below_price_one_shopping_cart"
            android:layout_width="match_parent"
            android:layout_height="2dp"
            android:background="@color/background_main_page"
            android:layout_marginTop="@dimen/standard_margin"
            app:layout_constraintTop_toBottomOf="@id/text_view_price_one_shopping_cart"/>

        <TextView
            android:id="@+id/text_view_price_all_product_shopping_cart"
            android:text="@string/price_all_2"
            android:textSize="@dimen/standard_text_size"
            android:textColor="@android:color/black"
            app:layout_constraintTop_toBottomOf="@id/line_below_price_one_shopping_cart"
            android:layout_marginTop="@dimen/standard_margin"
            app:layout_constraintRight_toRightOf="@id/text_view_price_one_shopping_cart"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" />

        <TextView
            android:id="@+id/text_view_toman_price_all_shopping_cart"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="8dp"
            android:text="@string/price_unit"
            android:textSize="@dimen/standard_text_size"
            app:layout_constraintLeft_toLeftOf="parent"
            android:layout_marginLeft="@dimen/standard_margin"
            app:layout_constraintBottom_toBottomOf="@+id/text_view_price_all_product_shopping_cart"
            app:layout_constraintTop_toTopOf="@+id/text_view_price_all_product_shopping_cart" />

        <TextView
            android:id="@+id/text_view_second_column_price_all_shopping_cart"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="@dimen/standard_margin"
            android:text="150,000"
            android:textSize="@dimen/standard_text_size"
            app:layout_constraintBottom_toBottomOf="@+id/text_view_toman_price_all_shopping_cart"
            app:layout_constraintLeft_toRightOf="@id/text_view_toman_price_all_shopping_cart"
            app:layout_constraintTop_toTopOf="@+id/text_view_toman_price_all_shopping_cart" />


    </android.support.constraint.ConstraintLayout>

</android.support.v7.widget.CardView>
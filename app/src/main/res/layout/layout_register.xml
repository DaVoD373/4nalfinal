<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:animateLayoutChanges="true"
    android:layoutDirection="rtl">

    <TextView
        android:id="@+id/text_view_user_name_register"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginRight="@dimen/standard_margin"
        android:layout_marginTop="64dp"
        app:layout_constraintTop_toTopOf="parent"
        android:text=""
        android:textColor="@android:color/black"
        android:textSize="@dimen/standard_text_size"
        app:layout_constraintRight_toRightOf="parent"/>

    <EditText
        android:id="@+id/edit_text_user_name_register"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="@dimen/form_margin"
        android:textSize="@dimen/default_text_size"
        android:layout_marginRight="@dimen/form_margin"
        android:layout_marginTop="105dp"
        android:background="@drawable/login_form_frame"
        android:gravity="right"
        android:inputType="text"
        android:hint="@string/user_name_login_edit_text"
        android:padding="@dimen/standard_margin"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:id="@+id/text_view_password_register"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginRight="@dimen/standard_margin"
        android:layout_marginTop="@dimen/standard_margin_x2"
        android:text=""
        android:textColor="@android:color/black"
        android:gravity="right"
        android:textSize="@dimen/standard_text_size"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toBottomOf="@id/edit_text_user_name_register" />

    <EditText
        android:id="@+id/edit_text_password_register"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="@dimen/form_margin"
        android:layout_marginRight="@dimen/form_margin"
        android:layout_marginTop="202dp"
        android:background="@drawable/login_form_frame"
        android:textSize="@dimen/default_text_size"
        android:imeOptions="actionDone"
        android:inputType="text"
        android:padding="@dimen/standard_margin"
        android:ems="10"
        android:hint="@string/password_login"
        app:layout_constraintTop_toTopOf="parent"
        tools:ignore="TextFields" />

    <Button
        android:id="@+id/btn_register"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:visibility="invisible"
        android:layout_marginLeft="@dimen/form_margin_x2"
        android:layout_marginRight="@dimen/form_margin_x2"
        android:layout_marginTop="298dp"
        android:background="@drawable/login_button_form_frame"
        android:text="@string/register"
        android:textColor="@android:color/white"
        android:textSize="@dimen/standard_text_size_x1.5"
        app:layout_constraintTop_toTopOf="parent" />


</android.support.constraint.ConstraintLayout>